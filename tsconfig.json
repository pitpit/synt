{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es5",
        // make Konva et EventEmiiter imports works the es6 way. See https://github.com/konvajs/konva/issues/598
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "strict": true,
        "sourceMap": true,
        "removeComments": false,
        "moduleResolution": "node"
    },
    "exclude": [
      "node_modules",
      "tests/**/*.test.ts"
    ]
}
